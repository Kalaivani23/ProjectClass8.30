package org.maven.project.Selenium_Cucumber;

import java.util.List;
import java.util.Map;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

import cucumber.api.DataTable;
import cucumber.api.java.en.Given;

public class Nor {
	@Given("^User searches for the hotel$")
	public void user_searches_for_the_hotel(DataTable date) throws InterruptedException  {
		Thread.sleep(5000);
		List<Map<String,String>> values = date.asMaps(String.class, String.class);
		common = driver.findElement(By.id("location"));
		data = new Select(common);
		data.selectByVisibleText(values.get(0).get("Location"));
		WebElement common2 = driver.findElement(By.id("hotels"));
		data = new Select(common2);
		data.selectByVisibleText(values.get(1).get("Hotels"));
		WebElement common1 =  driver.findElement(By.id("datepick_in"));
		common1.clear();
		common1.sendKeys(values.get(4).get("Datepick_in"));
		common = driver.findElement(By.id("datepick_out"));
		common.clear();
		common.sendKeys(values.get(5).get("Datepick_out"));

	}


}
